<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8E8E8"
    android:layout_height="match_parent"
    tools:context="com.example.shalini.msit.Oneonefour">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/i11"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:background="@drawable/sportsmeet" />

    <TextView
        android:id="@+id/t11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:text="SPORTS MEET"
        android:background="#30415D"
        android:textColor="#EAE3EA"


        android:textSize="50dp" />

    <TextView
        android:id="@+id/t22"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="320dp"
        android:gravity="center"
        android:text="(annual sports meet of MSI and MSIT)"
        android:textColor="#EAE3EA"
        android:background="#30415D"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/t33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:textColor="#000000"


        android:textSize="20dp" />
</RelativeLayout>


</ScrollView>
