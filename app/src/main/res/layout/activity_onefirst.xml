<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#535353"
    tools:context="com.example.shalini.msit.Onefirst">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <ImageView
        android:id="@+id/i11"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/eventsd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/t11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        android:text="Below is a list of star events of the college along with their details.\n"
        android:layout_marginTop="280dp"
        android:textColor="#88BBD6"
        />

    <Button
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENESIS"
        android:textSize="20dp"
        android:background="#3F3250"
        android:textColor="#66ABBC"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
         />

    <Button
        android:id="@+id/but2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AVENSIS"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="200dp"
        android:textSize="20dp"
        android:background="#3F3250"
        android:textColor="#66ABBC"
         />

    <Button
        android:id="@+id/but3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="ENVA"
        android:background="#3F3250"
        android:textColor="#66ABBC"
android:layout_marginTop="460dp"
        android:layout_marginLeft="50dp"


         />

    <Button
        android:id="@+id/but4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPORTS MEET"
        android:textSize="20dp"
        android:background="#3F3250"
        android:textColor="#66ABBC"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />




</RelativeLayout>

</ScrollView>
